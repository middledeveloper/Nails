@model Nails.Models.Master

<div>
    <h3 id="contacts" class="mt-4">Контакты</h3>
    <hr />
    <div class="col-12 row">
        <div class="col-4">
            <img src="@Model.Photo" style="border-radius: 50%;" class="img-fluid img-thumbnail" alt="@Model.FirstName @Model.LastName" />
        </div>
        <div class="col-8 pl-3">
            <h3>@Model.FirstName @Model.LastName</h3>
            <div class="ml-3">
                @foreach (var contact in Model.Contacts)
                {
                    <div class="row mt-1">
                        <img src="@contact.ContactType.Logo" width="20" height="20" alt="@contact.ContactType.Title" />
                        <a href="@contact.Address" class="ml-1" target="_blank">@contact.ContactType.Title</a>
                    </div>
                }
            </div>
            @if (Model.Certificates.Count > 0)
            {
                <div class="mt-1">
                    <h5 class="mt-3">Сертификаты</h5>
                    <div class="col-12 row">
                        @foreach (var certificate in Model.Certificates)
                        {
                            <div class="col-6 mt-2 pl-0">
                                <a href="@certificate.Scan" class="text-decoration-none" target="_blank">
                                    <img src="@certificate.Scan" class="img-fluid pt-1 pr-1" alt="@certificate.Authority.Title" />
                                </a>
                                <span class="small">@certificate.Authority.Title</span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
